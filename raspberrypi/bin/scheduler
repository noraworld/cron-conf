      exit 1
      ;;
  esac
}

periodic() {
  # Auto-update cron conf
  ca

  # Observe IP address not getting lost
  sudo ip-observer

  # Observe the system clock not lagging
  clock-observer

  # Auto-connect all devices paired with Bluetooth (if not connected)
  marlin autoconnect all --retry 2 # --log /home/ubuntu/.log/bluetooth_autoconnect.log

  # Auto-update specific Git repositories
  # Reason for invalidation: "git pull" is prohibited from "observe-firewall"
  # auto-git-pull
}

startup() {
  log-reboot
  clock-observer
  metronome set full
  # marlin re-disconnect all --retry=2
  search-stoppable-observer-daemons --skip --delay 30
}

