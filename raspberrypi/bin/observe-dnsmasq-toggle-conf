            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            maeve_quota_refresh=true
          fi
        fi
      fi
    fi
  fi
}



ometeotl_todo() {
  set +u
  [ "$ometeotl_skipped" = "" ] && ometeotl_skipped=false
  [ "$ometeotl_quota_refresh" = "" ] && ometeotl_quota_refresh=false
  set -u

  if [ "$ometeotl_skipped" = "false" ]; then
    if [ "$NIGHT" != "1" ]; then
      if \
        [ "$(restrict-all check "observe-ometeotl-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe day --service ometeotl)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        ometeotl_skipped=true
      fi
    else
      if \
        [ "$(restrict-all check "observe-ometeotl-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe night --service ometeotl)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        ometeotl_skipped=true
      fi
    fi
  else
    set +u
    [ "$ometeotl_accomplished_last_checked_at" = "" ] && ometeotl_accomplished_last_checked_at=$(date +%s)
    set -u

    if [ "$(echo $(( $(date +%s) - $ometeotl_accomplished_last_checked_at )))" -gt "$ACCOMPLISHED_CHECK_INTERVAL" ]; then
      ometeotl_accomplished_last_checked_at=$(date +%s)

      if [ "$NIGHT" != 1 ]; then
        if [ "$(quotarget --timeframe day --service ometeotl)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          ometeotl_skipped=false

          if [ "$ometeotl_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            ometeotl_quota_refresh=true
          fi
        fi
      else
        if [ "$(quotarget --timeframe night --service ometeotl)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          ometeotl_skipped=false

          if [ "$ometeotl_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            ometeotl_quota_refresh=true
          fi
        fi
      fi
    fi
  fi
}



upstream_todo() {
  set +u
  [ "$upstream_skipped" = "" ] && upstream_skipped=false
  [ "$upstream_quota_refresh" = "" ] && upstream_quota_refresh=false
  set -u

  if [ "$upstream_skipped" = "false" ]; then
    if [ "$NIGHT" != "1" ]; then
      if \
        [ "$(restrict-all check "observe-adguard-upstream-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe day --service upstream)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        upstream_skipped=true
      fi
    else
      if \
        [ "$(restrict-all check "observe-adguard-upstream-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe night --service upstream)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        upstream_skipped=true
      fi
    fi
  else
    set +u
    [ "$upstream_accomplished_last_checked_at" = "" ] && upstream_accomplished_last_checked_at=$(date +%s)
    set -u

    if [ "$(echo $(( $(date +%s) - $upstream_accomplished_last_checked_at )))" -gt "$ACCOMPLISHED_CHECK_INTERVAL" ]; then
      upstream_accomplished_last_checked_at=$(date +%s)

      if [ "$NIGHT" != 1 ]; then
        if [ "$(quotarget --timeframe day --service upstream)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          upstream_skipped=false

          if [ "$upstream_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            upstream_quota_refresh=true
          fi
        fi
      else
        if [ "$(quotarget --timeframe night --service upstream)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          upstream_skipped=false

          if [ "$upstream_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            upstream_quota_refresh=true
          fi
        fi
      fi
    fi
  fi
}



discipline_todo() {
  set +u
  [ "$discipline_skipped" = "" ] && discipline_skipped=false
  [ "$discipline_quota_refresh" = "" ] && discipline_quota_refresh=false
  set -u

  if [ "$discipline_skipped" = "false" ]; then
    if [ "$NIGHT" != "1" ]; then
      if \
        # TODO:
        #   "restrict-all" is actually unnecessary, but executing "quotarget" every time takes time,
        #   so it's kind of like cushioning material. Even though "observe-gaming-conf" is inappropriate,
        #   I don't have no idea what kind of "cushioning material" is better.
        #   Don't forget to update "discipline" part in quotarget as well when updating here. [^cushioning_material]
        [ "$(restrict-all check "observe-gaming-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe day --service discipline)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        discipline_skipped=true

        if [ "$(systemctl --user is-active observe-firewall)" != "active" ] && [ "$(observe-firewall check)" -gt 0 ]; then
          observe-firewall allow
        fi
      fi
    else
      if \
        # TODO: [^cushioning_material]
        [ "$(restrict-all check "observe-gaming-conf")" -le 0 ] &&
        [ "$(quotarget --timeframe night --service discipline)" -gt 0 ] &&
        [ "$(sincere)" -gt 0 ];
      then
        discipline_skipped=true

        if [ "$(systemctl --user is-active observe-firewall)" != "active" ] && [ "$(observe-firewall check)" -gt 0 ]; then
          observe-firewall allow
        fi
      fi
    fi
  else
    if [ "$(systemctl --user is-active observe-firewall)" != "active" ] && [ "$(observe-firewall check)" -gt 0 ]; then
      observe-firewall allow
    fi

    set +u
    [ "$discipline_accomplished_last_checked_at" = "" ] && discipline_accomplished_last_checked_at=$(date +%s)
    set -u

    if [ "$(echo $(( $(date +%s) - $discipline_accomplished_last_checked_at )))" -gt "$ACCOMPLISHED_CHECK_INTERVAL" ]; then
      discipline_accomplished_last_checked_at=$(date +%s)

      if [ "$NIGHT" != 1 ]; then
        if [ "$(quotarget --timeframe day --service discipline)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          discipline_skipped=false

          if [ "$discipline_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            discipline_quota_refresh=true
          fi
        fi
      else
        if [ "$(quotarget --timeframe night --service discipline)" -lt 0 ] || [ "$(sincere)" -lt 0 ]; then
          discipline_skipped=false

          if [ "$discipline_quota_refresh" = "true" ]; then
            /home/ubuntu/workspace/cron-conf/bin/lib/punish                \
              --from "$(echo "$(basename "$0")" "$*" | sed -r 's/\s$//g')" \
              --duration "$PUNISHMENT_DURATION"
          else
            discipline_quota_refresh=true
          fi
        fi
      fi
    fi
  fi
}



initialize() {
  if [ "$MODE" = "firewall" ] || [ "$MODE" = "todo" ]; then
    if [ "$(observe-firewall check)" -le 0 ]; then
      observe-firewall deny --safe
      [ "$DEBUG" = 1 ] && echo "debug: $(date '+%s'): reset $TARGET"
    fi
  fi
}



main() {
  parse "$@"
  eval "set -- $REST"
  validate "$@"
  initialize "$@"

  # shellcheck disable=SC2086
  if [ "$SUDO" = "1" ]; then
    sudo inotifywait -e "$EVENT" --format '%w%f' -m -q -r -t 0 --exclude "\.git" "$TARGET" | while read -r observed_path; do
      observe "$@"
    done
  else
    while true; do
      sudo mkdir -p "$TARGET"
      file=$FILE
      switch_mode "$@"

      inotifywait -e "$EVENT" --format '%w%f' -m -q -r -t 5 --exclude "\.git" "$TARGET" | while read -r observed_path; do
        observe "$@"
      done
    done
  fi
}



validate() {
  if [ "$EVENT" = "" ]; then
    echo "error: --event not set" >&2
    exit 1
  fi

  if [ "$SOURCE" = "" ]; then
    if [ "$EVENT" = "delete" ] && [ "$MODE" != "cron" ]; then
      echo "error: --source not set" >&2
      exit 1
    fi
  fi

  if [ "$TARGET" = "" ]; then
    echo "error: --target not set" >&2
    exit 1
  fi

  if [ "$MODE" = "" ]; then
    echo "error: --mode not set" >&2
    exit 1
  elif [ "$MODE" != "git" ] && [ "$MODE" != "ln" ] && [ "$MODE" != "unlink" ] && [ "$MODE" != "cron" ] && [ "$MODE" != "sync" ] && [ "$MODE" != "firewall" ] && [ "$MODE" != "todo" ]; then
    echo "error: unrecognized mode $MODE" >&2
    exit 1
  fi
}



# @getoptions
parser_definition() {
  setup REST help:usage -- "Usage: observe-dnsmasq-toggle-conf [options]... [arguments]..." ""
  msg -- "Options:"
  flag   DEBUG   -d --debug    -- "debug mode"
  param  EVENT   -e --event    -- "TBD"
  param  FILE    -f --file     -- "observe only a specific file (all files in a directory by default)"
  param  SOURCE  -s --source   -- "TBD"
  param  TARGET  -t --target   -- "target directory to observe (current directory by default)"
  flag   NIGHT      --night    -- "if you specify this, the option for quotarget is changed"
  flag   SUDO       --sudo     -- "TBD"
  param  MODE    -m --mode     -- "git, ln, unlink, cron, or sync"
  flag   VPN        --vpn      -- "only if you are connected to a VPN and have a foreign IP address, you will be exempt from the restrictions"
  disp   :usage  -h --help     -- "print help message and exit"
  disp   VERSION    --version  -- "show the current version"
}
# @end



# @gengetoptions parser -i parser_definition parse
# Generated by getoptions (BEGIN)
# URL: https://github.com/ko1nksm/getoptions (v3.3.0)
DEBUG=''
EVENT=''
FILE=''
SOURCE=''
TARGET=''
NIGHT=''
SUDO=''
MODE=''
VPN=''
REST=''
parse() {
  OPTIND=$(($#+1))
  while OPTARG= && [ $# -gt 0 ]; do
    case $1 in
      --?*=*) OPTARG=$1; shift
        eval 'set -- "${OPTARG%%\=*}" "${OPTARG#*\=}"' ${1+'"$@"'}
        ;;
      --no-*|--without-*) unset OPTARG ;;
      -[efstm]?*) OPTARG=$1; shift
        eval 'set -- "${OPTARG%"${OPTARG#??}"}" "${OPTARG#??}"' ${1+'"$@"'}
        ;;
      -[dh]?*) OPTARG=$1; shift
        eval 'set -- "${OPTARG%"${OPTARG#??}"}" -"${OPTARG#??}"' ${1+'"$@"'}
        OPTARG= ;;
    esac
    case $1 in
      '-d'|'--debug')
        [ "${OPTARG:-}" ] && OPTARG=${OPTARG#*\=} && set "noarg" "$1" && break
        eval '[ ${OPTARG+x} ] &&:' && OPTARG='1' || OPTARG=''
        DEBUG="$OPTARG"
        ;;
      '-e'|'--event')
        [ $# -le 1 ] && set "required" "$1" && break
        OPTARG=$2
        EVENT="$OPTARG"
        shift ;;
      '-f'|'--file')
        [ $# -le 1 ] && set "required" "$1" && break
        OPTARG=$2
        FILE="$OPTARG"
        shift ;;
      '-s'|'--source')
        [ $# -le 1 ] && set "required" "$1" && break
        OPTARG=$2
        SOURCE="$OPTARG"
        shift ;;
      '-t'|'--target')
        [ $# -le 1 ] && set "required" "$1" && break
        OPTARG=$2
        TARGET="$OPTARG"
        shift ;;
      '--night')
        [ "${OPTARG:-}" ] && OPTARG=${OPTARG#*\=} && set "noarg" "$1" && break
        eval '[ ${OPTARG+x} ] &&:' && OPTARG='1' || OPTARG=''
        NIGHT="$OPTARG"
        ;;
      '--sudo')
        [ "${OPTARG:-}" ] && OPTARG=${OPTARG#*\=} && set "noarg" "$1" && break
        eval '[ ${OPTARG+x} ] &&:' && OPTARG='1' || OPTARG=''
        SUDO="$OPTARG"
        ;;
      '-m'|'--mode')
        [ $# -le 1 ] && set "required" "$1" && break
        OPTARG=$2
        MODE="$OPTARG"
        shift ;;
      '--vpn')
        [ "${OPTARG:-}" ] && OPTARG=${OPTARG#*\=} && set "noarg" "$1" && break
        eval '[ ${OPTARG+x} ] &&:' && OPTARG='1' || OPTARG=''
        VPN="$OPTARG"
        ;;
      '-h'|'--help')
        usage
        exit 0 ;;
      '--version')
        echo "${VERSION}"
        exit 0 ;;
      --)
        shift
        while [ $# -gt 0 ]; do
          REST="${REST} \"\${$(($OPTIND-$#))}\""
          shift
        done
        break ;;
      [-]?*) set "unknown" "$1"; break ;;
      *)
        REST="${REST} \"\${$(($OPTIND-$#))}\""
    esac
    shift
  done
  [ $# -eq 0 ] && { OPTIND=1; unset OPTARG; return 0; }
  case $1 in
    unknown) set "Unrecognized option: $2" "$@" ;;
    noarg) set "Does not allow an argument: $2" "$@" ;;
    required) set "Requires an argument: $2" "$@" ;;
    pattern:*) set "Does not match the pattern (${1#*:}): $2" "$@" ;;
    notcmd) set "Not a command: $2" "$@" ;;
    *) set "Validation error ($1): $2" "$@"
  esac
  echo "$1" >&2
  exit 1
}
usage() {
cat<<'GETOPTIONSHERE'
Usage: observe-dnsmasq-toggle-conf [options]... [arguments]...

Options:
  -d, --debug                 debug mode
  -e, --event EVENT           TBD
  -f, --file FILE             observe only a specific file (all files in a directory by default)
  -s, --source SOURCE         TBD
  -t, --target TARGET         target directory to observe (current directory by default)
      --night                 if you specify this, the option for quotarget is changed
      --sudo                  TBD
  -m, --mode MODE             git, ln, unlink, cron, or sync
      --vpn                   only if you are connected to a VPN and have a foreign IP address, you will be exempt from the restrictions
  -h, --help                  print help message and exit
      --version               show the current version
GETOPTIONSHERE
}
# Generated by getoptions (END)
# @end



main "$@"
